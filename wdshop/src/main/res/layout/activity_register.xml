<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="@mipmap/login_register_background">
    <ImageView
        android:id="@+id/image_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_160"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_36"
        android:src="@mipmap/login_icon_phone"
        />
    <EditText
        android:id="@+id/edit_phone"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/image_phone"
        app:layout_constraintTop_toTopOf="@id/image_phone"
        app:layout_constraintBottom_toBottomOf="@id/image_phone"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dp_36"
        android:layout_marginLeft="@dimen/dp_20"
        android:hint="手机号"
        android:textSize="@dimen/sp_18"
        android:textColorHint="#fff"
        android:background="@null"
        android:inputType="number"
       android:maxLength="11"
        />
    <View
        android:id="@+id/view_top"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_1"
        app:layout_constraintTop_toBottomOf="@id/image_phone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#fff"
        />
    <View
    android:id="@+id/view_center"
    android:layout_width="@dimen/dp_0"
    android:layout_height="@dimen/dp_1"
    app:layout_constraintTop_toBottomOf="@id/image_phone"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginLeft="@dimen/dp_36"
    android:layout_marginRight="@dimen/dp_36"
    android:layout_marginTop="@dimen/dp_74"
    android:background="#fff"
    />
    <ImageView
        android:id="@+id/image_verification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/view_center"
        android:layout_marginBottom="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@mipmap/register_icon_verification"
        android:layout_marginLeft="@dimen/dp_36"
        />
    <EditText
        android:id="@+id/edit_verification"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/image_verification"
        app:layout_constraintTop_toTopOf="@id/image_verification"
        app:layout_constraintBottom_toBottomOf="@id/image_verification"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dp_36"
        android:layout_marginLeft="@dimen/dp_20"
        android:hint="验证码"
        android:textSize="@dimen/sp_18"
        android:textColorHint="#fff"
        android:background="@null"
        />
    <TextView
        android:id="@+id/text_verification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/edit_verification"
        app:layout_constraintBottom_toTopOf="@id/view_center"
        android:layout_marginBottom="@dimen/dp_10"
        app:layout_constraintTop_toTopOf="@id/edit_verification"
        android:text="获取验证码"
        android:textSize="@dimen/sp_10"
        android:textColor="#ffffff"
        />
    <View
        android:id="@+id/view_bottom"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_1"
        app:layout_constraintTop_toBottomOf="@id/image_verification"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_74"
        android:background="#fff"
        />
    <ImageView
        android:id="@+id/image_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/view_bottom"
        android:layout_marginBottom="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@mipmap/login_icon_lock"
        android:layout_marginLeft="@dimen/dp_36"
        />
    <EditText
        android:id="@+id/edit_pass"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/image_pass"
        app:layout_constraintTop_toTopOf="@id/image_pass"
        app:layout_constraintBottom_toBottomOf="@id/image_pass"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dp_36"
        android:layout_marginLeft="@dimen/dp_20"
        android:hint="登录密码"
        android:textSize="@dimen/sp_18"
        android:textColorHint="#fff"
        android:background="@null"
        android:maxLength="20"
        android:password="true"
        />
    <ImageButton
        android:id="@+id/image_eye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/edit_pass"
        app:layout_constraintBottom_toTopOf="@id/view_bottom"
        android:layout_marginBottom="@dimen/dp_10"
        app:layout_constraintTop_toTopOf="@id/edit_pass"
        android:src="@mipmap/login_icon_eye"
        android:background="@null"
        />
    <TextView
        android:id="@+id/text_have"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/view_bottom"
        app:layout_constraintRight_toRightOf="@id/view_bottom"
        android:text="已有账户?立即登录"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_14"
        />
    <Button
        android:id="@+id/register_button"
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_40"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_120"
        android:text="注册"
        android:textSize="@dimen/sp_18"
        android:textColor="#ff5f71"
        android:background="@drawable/button_shape"
        />
</android.support.constraint.ConstraintLayout>