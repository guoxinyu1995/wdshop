<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="@dimen/dp_292"
        android:layout_height="@dimen/dp_97"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/cart_iten_shape"
        android:layout_marginTop="@dimen/dp_10"
        android:padding="@dimen/dp_8">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/cart_image"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_marginRight="@dimen/dp_10" />

        <TextView
            android:id="@+id/cart_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:maxLines="2"
            android:text="title"
            android:textColor="#666"
            android:textSize="@dimen/sp_12"
            app:layout_constraintLeft_toRightOf="@id/cart_image"
            app:layout_constraintTop_toTopOf="@id/cart_image" />

        <TextView
            android:id="@+id/cart_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:maxLines="2"
            android:text="price"
            android:textColor="#ff0606"
            android:textSize="@dimen/dp_14"
            app:layout_constraintBottom_toBottomOf="@id/cart_image"
            app:layout_constraintLeft_toRightOf="@id/cart_image" />

        <TextView
            android:id="@+id/text_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/cart_image"
            app:layout_constraintRight_toRightOf="parent"
            android:text="num"
            />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>