<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/text_myaddre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_40"
        android:text="我的收获地址"
        android:textSize="@dimen/sp_16"
        android:textColor="#666666"
        />
    <TextView
        android:id="@+id/accomplish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/text_myaddre"
        app:layout_constraintBottom_toBottomOf="@id/text_myaddre"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dp_24"
        android:text="完成"
        android:textColor="#666666"
        android:textSize="@dimen/sp_12"
        />
    <Button
        android:id="@+id/btu_newaddress"
        android:layout_width="@dimen/dp_116"
        android:layout_height="@dimen/dp_30"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_30"
        android:textSize="@dimen/sp_12"
        android:textColor="#ffffff"
        android:text="新增收获地址"
        android:background="@drawable/button_address_shape"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/address_recycle"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintTop_toBottomOf="@id/text_myaddre"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btu_newaddress"
        android:layout_marginTop="@dimen/dp_20"
        />
</android.support.constraint.ConstraintLayout>