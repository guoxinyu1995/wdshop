<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   android:padding="@dimen/dp_10"
    android:layout_margin="@dimen/dp_10"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/recycle_item_shape"
    >
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/find_simple"
            android:layout_width="@dimen/dp_130"
            android:layout_height="@dimen/dp_105"
            android:layout_centerHorizontal="true"
            fresco:roundedCornerRadius="8dp"
            />
        <TextView
            android:id="@+id/find_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/find_simple"
            android:layout_alignLeft="@id/find_simple"
            android:text="title"
            android:maxLines="1"
            android:layout_marginTop="@dimen/dp_10"
            />
        <TextView
            android:id="@+id/find_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/find_title"
            android:layout_alignLeft="@id/find_simple"
            android:text="price"
            android:textColor="#f00"
            android:layout_marginTop="@dimen/dp_10"
            />
</RelativeLayout>