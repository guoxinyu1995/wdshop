<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/home_image_category"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_alignBottom="@+id/home_editx_search"
        android:background="@mipmap/common_btn_menu"
        android:layout_marginTop="@dimen/dp_33"
        />
        <EditText
            android:id="@+id/home_editx_search"
            android:layout_width="@dimen/dp_230"
            android:layout_height="@dimen/dp_30"
            android:layout_toRightOf="@id/home_image_category"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_20"
            android:background="@drawable/home_editx_shape"
            android:hint="请输入要搜索的商品"
            android:paddingLeft="@dimen/dp_20"
            />
    <ImageView
        android:id="@+id/home_image_search"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_35"
        android:background="@mipmap/common_nav_btn_search_n"
        />
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_editx_search"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/dp_20"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            >
            <com.stx.xhb.xbanner.XBanner
                android:id="@+id/home_xbanner"
                android:layout_width="@dimen/dp_300"
                android:layout_height="@dimen/dp_164"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_20"
                app:clipChildrenLeftRightMargin="@dimen/dp_10"
                app:isClipChildrenMode="true"
                app:AutoPlayTime="2000"
                />
            <ImageView
                android:id="@+id/hot_commodity"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_below="@id/home_xbanner"
                android:layout_marginTop="@dimen/dp_30"
                android:background="@mipmap/bg_rxxp_syf" />
            <TextView
                android:id="@+id/text_hot_commodity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/home_xbanner"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_35"
                android:text="热销新品"
                android:textColor="#ff7f57"
                android:textSize="@dimen/sp_16" />
            <ImageButton
                android:id="@+id/hot_image_btn"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_6"
                android:layout_below="@id/home_xbanner"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_100"
                android:layout_marginTop="@dimen/dp_43"
                android:layout_toRightOf="@id/text_hot_commodity"
                android:background="@mipmap/home_btn_moer_pink_n" />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/hot_recycleview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/hot_commodity"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_10" />

            <ImageView
                android:id="@+id/image_fashion"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_below="@id/hot_recycleview"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@mipmap/bg_mlss_syf" />

            <TextView
                android:id="@+id/text_fashion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/hot_recycleview"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_15"
                android:text="魔力时尚"
                android:textColor="#6699ff"
                android:textSize="@dimen/sp_16" />
            <ImageButton
                android:id="@+id/fashion_image_btn"
                android:layout_width="@dimen/dp_24"
                android:layout_height="6dp"
                android:layout_below="@id/hot_recycleview"
                android:layout_marginLeft="@dimen/dp_100"
                android:layout_marginTop="@dimen/dp_23"
                android:layout_toRightOf="@id/text_fashion"
                android:background="@mipmap/home_btn_more_purple_n" />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/fashion_recycleview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_fashion"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_10" />

            <ImageView
                android:id="@+id/image_quality"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_below="@id/fashion_recycleview"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@mipmap/bg_pzsh_syf" />
            <TextView
                android:id="@+id/text_quality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fashion_recycleview"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_25"
                android:text="品质生活"
                android:textColor="#ff6600"
                android:textSize="@dimen/sp_16" />
            <ImageButton
                android:id="@+id/quality_image_btn"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_6"
                android:layout_below="@id/fashion_recycleview"
                android:layout_marginLeft="@dimen/dp_100"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_24"
                android:layout_toRightOf="@id/text_quality"
                android:background="@mipmap/common_btn_more_yellow_n" />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/quality_recycleview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_quality"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_10" />
        </RelativeLayout>
    </ScrollView>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/find_recycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/home_editx_search"
        android:layout_marginTop="@dimen/dp_20"
        android:visibility="gone"
        />
   <ImageView
       android:id="@+id/more_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_below="@+id/home_editx_search"
       android:layout_marginTop="@dimen/dp_20"
       android:visibility="gone"
       />
    <TextView
        android:id="@+id/more_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="text"
        android:textSize="@dimen/sp_16"
        android:layout_below="@id/home_editx_search"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        />
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/xrecycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/more_image"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/image_no"
        android:layout_width="@dimen/dp_140"
        android:layout_height="@dimen/dp_140"
        android:layout_below="@id/home_editx_search"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@mipmap/meiyoushop"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/text_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_no"
        android:layout_centerHorizontal="true"
        android:text="抱歉没有找到该商品......"
        android:layout_marginTop="@dimen/dp_15"
        android:textSize="@dimen/sp_24"
        android:visibility="gone"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/category_one_recycle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_43"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@mipmap/bg_one"
        android:layout_below="@+id/home_editx_search"
        android:visibility="gone"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/category_two_recycle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_92"
        android:layout_below="@id/category_one_recycle"
        android:visibility="gone"
        android:background="#995d5d5d"
        />
</RelativeLayout>