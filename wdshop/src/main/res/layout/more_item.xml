<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_5">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_174"
        android:layout_centerHorizontal="true"
        android:background="@drawable/recycle_item_shape"
        android:padding="@dimen/dp_10"
        android:id="@+id/more_relate"
        >

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/more_image"
            android:layout_width="@dimen/dp_131"
            android:layout_height="@dimen/dp_102" />

        <TextView
            android:id="@+id/more_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/more_image"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#666"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/more_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/more_title"
            android:layout_centerHorizontal="true"
            android:textColor="#f00"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>
</RelativeLayout>